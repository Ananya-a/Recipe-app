<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shape with stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#FF0000" /> <!-- Color of the outline -->
        </shape>
    </item>
    <!-- Inner shape with fill -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Color to fill the shape -->
        </shape>
    </item>
</layer-list>
