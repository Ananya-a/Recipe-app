<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg11"
    android:orientation="vertical"
    tools:context=".Homepage">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingLeft="15sp"
        android:paddingTop="5sp"
        android:text="Welcome to The Recipe Repository!" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:text="What would you like to cook today?"
        android:textSize="30sp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView2"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#D58181"
        android:scaleType="fitCenter"
        android:src="@drawable/veggie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:text="Categories"
        android:textSize="25sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="163dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="156dp"
                        android:layout_height="match_parent"
                        android:onClick="categoryBtn"
                        android:tag="non_veg"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="15dp">

                        <TextView
                            android:id="@+id/non"
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="70dp"
                            android:text="Non-veg"
                            android:textAlignment="center"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="74dp"
                            android:layout_height="68dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="3dp"
                            app:srcCompat="@drawable/nonveg" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="156dp"
                        android:layout_height="match_parent"
                        android:onClick="categoryBtn"
                        android:tag="vegan"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">

                        <TextView
                            android:id="@+id/vegan"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="75dp"
                            android:text="Vegan"
                            android:textAlignment="center"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="74dp"
                            android:layout_height="68dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/vegan" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="156dp"
                        android:layout_height="158dp"
                        android:onClick="categoryBtn"
                        android:tag="veg"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">

                        <TextView
                            android:id="@+id/veg"
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="75dp"
                            android:text="Veg"
                            android:textAlignment="center"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="70dp"
                            android:layout_height="68dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/veg" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="157dp"
                        android:layout_height="match_parent"
                        android:onClick="categoryBtn"
                        android:tag="italian"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">

                        <TextView
                            android:id="@+id/italian"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="75dp"
                            android:text="Italian"
                            android:textAlignment="center"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="74dp"
                            android:layout_height="68dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/italian" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="156dp"
                        android:layout_height="match_parent"
                        android:onClick="categoryBtn"
                        android:tag="mexican"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">

                        <TextView
                            android:id="@+id/mex"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="75dp"
                            android:text="Mexican"
                            android:textAlignment="center"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="74dp"
                            android:layout_height="68dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/mexican" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="156dp"
                        android:layout_height="match_parent"
                        android:onClick="categoryBtn"
                        android:tag="festival"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">

                        <TextView
                            android:id="@+id/festival"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="75dp"
                            android:text="Festival"
                            android:textAlignment="center"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="74dp"
                            android:layout_height="68dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/festival" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </HorizontalScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:contentDescription="main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="331dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:text="Recommendations"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/veg1"
                    android:layout_width="192dp"
                    android:layout_height="171dp"
                    android:layout_marginLeft="10sp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:contentDescription="pic"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/dosa" />

                <ImageButton
                    android:id="@+id/non1"
                    android:layout_width="194dp"
                    android:layout_height="171dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:contentDescription="pic"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/non1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/mex1"
                    android:layout_width="190dp"
                    android:layout_height="171dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="5sp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:contentDescription="pic"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/mex1" />

                <ImageButton
                    android:id="@+id/ita1"
                    android:layout_width="200dp"
                    android:layout_height="171dp"
                    android:layout_marginTop="5sp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:contentDescription="pic"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/italian1" />
            </LinearLayout>


            <ImageButton
                android:id="@+id/fes1"
                android:layout_width="196dp"
                android:layout_height="171dp"
                android:layout_marginLeft="10sp"
                android:adjustViewBounds="true"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="pic"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/dess1" />


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="15sp"
        android:background="#F7F7F7">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:backgroundTint="#F7F7F7"
            android:contentDescription="home"
            app:srcCompat="@drawable/ic_home"
            app:tint="#3E61BA" />


        <ImageButton
            android:id="@+id/nav_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130sp"
            android:backgroundTint="#F7F7F7"
            android:contentDescription="fav"
            app:srcCompat="@drawable/ic_user"
            app:tint="#D86161" />

        <ImageButton
            android:id="@+id/nav_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220sp"
            android:backgroundTint="#F7F7F7"
            android:contentDescription="planner"
            app:srcCompat="@drawable/ic_planner"
            app:tint="#4CAF50" />

        <ImageButton
            android:id="@+id/nav_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310sp"
            android:backgroundTint="#F7F7F7"
            android:contentDescription="logout"
            app:srcCompat="@drawable/ic_out"
            app:tint="#000000" />


    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>