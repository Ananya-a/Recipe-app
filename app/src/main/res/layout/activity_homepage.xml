<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Homepage">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingLeft="15sp"
        android:paddingTop="5sp"
        android:text="Hello, {username}" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:text="What would you like to cook today?"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="20sp"
        android:drawableStart="@drawable/ic_search"
        android:drawableEnd="@drawable/ic_more"
        android:ems="10"
        android:hint="Search any recipes"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:text="Categories"
        android:textSize="25sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="163dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="156dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">

                        <TextView
                            android:id="@+id/prog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="75dp"
                            android:text="Non-veg"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="74dp"
                            android:layout_height="68dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/nonveg" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="156dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">

                        <TextView
                            android:id="@+id/maths1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="75dp"
                            android:text="Vegan"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="74dp"
                            android:layout_height="68dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/vegan" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="156dp"
                        android:layout_height="158dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">

                        <TextView
                            android:id="@+id/chem"
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="75dp"
                            android:text="Veg"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="70dp"
                            android:layout_height="68dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/veg" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="157dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">

                        <TextView
                            android:id="@+id/mech"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="75dp"
                            android:text="Italian"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="74dp"
                            android:layout_height="68dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/italian" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="156dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">

                        <TextView
                            android:id="@+id/engg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="75dp"
                            android:text="Mexican"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="74dp"
                            android:layout_height="68dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/mexican" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:contentDescription="main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>