<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="144dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="246dp"
            android:paddingTop="3sp"
            android:text="Hello, {username}" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="27dp"
            android:text="What would you like to cook today?"
            android:textColor="#050505"
            android:textSize="30sp" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="782dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="10dp">

                    <TextView
                        android:id="@+id/prog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="75dp"
                        android:text="Non-veg"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="74dp"
                        android:layout_height="68dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/nonveg" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="10dp">

                    <TextView
                        android:id="@+id/maths1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="75dp"
                        android:text="Vegan"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="74dp"
                        android:layout_height="68dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/vegan" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="156dp"
                    android:layout_height="158dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="10dp">

                    <TextView
                        android:id="@+id/chem"
                        android:layout_width="74dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="75dp"
                        android:text="Veg"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="70dp"
                        android:layout_height="68dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/veg" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="10dp">

                    <TextView
                        android:id="@+id/mech"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="75dp"
                        android:text="Italian"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="74dp"
                        android:layout_height="68dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/italian" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="10dp">

                    <TextView
                        android:id="@+id/engg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="75dp"
                        android:text="Mexican"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="74dp"
                        android:layout_height="68dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/mexican" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>